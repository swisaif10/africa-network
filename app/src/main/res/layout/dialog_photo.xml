<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA000000">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="217dp"
        android:background="@drawable/unselected_country_background"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.80">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:switchMinWidth="45dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/lbl_set_profile_photo"/>



            <TextView
                android:id="@+id/photolBtn"
                android:layout_width="246dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/montserrat_medium"
                android:clickable="true"
                android:background="@drawable/clic_camerca_bag"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/clic_camera"
                android:text="@string/lbl_take_camera_picture"
                android:textColor="@drawable/txt_clic"
                android:textSize="14sp"/>


            <TextView
                android:id="@+id/galerieBtn"
                android:layout_width="246dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/montserrat_medium"
                android:clickable="true"
                android:background="@drawable/clic_camerca_bag"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/clic_gall"
                android:text="@string/lbl_choose_from_gallery"
                android:textColor="@drawable/txt_clic"
                android:textSize="14sp"
         />
        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
